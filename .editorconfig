root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true
ij_continuation_indent_size = 8
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter: on
ij_formatter_tags_enabled = true
ij_smart_tabs = false
ij_visual_guides = 120
ij_wrap_on_typing = true


[{*.gd,*.gdf}]
indent_style = tab
ij_visual_guides = 100
ij_gdscript_keep_indents_on_empty_lines = false
ij_gdscript_label_indent_absolute = false
ij_gdscript_label_indent_size = 0
ij_gdscript_space_after_colon = true
ij_gdscript_space_after_comma = true
ij_gdscript_space_before_colon = true
ij_gdscript_space_before_comma = false
ij_gdscript_use_relative_indents = false
